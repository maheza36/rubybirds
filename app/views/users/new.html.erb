<div class="container">
  <%= form_for(:user, url: users_path)  do |f| %>
    <div class="form-group">
      <label for="user_nickname">Nickname</label>
      <input type="text" name="user[nickname]" id="nickname" class="form-control">
    </div>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="user_last_name">Last name</label>
      <input type="text" name="user[last_name]" id="last_name" class="form-control">
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="user_password">Password</label>
      <input type="password" name="user[password]" id="password" class="form-control">
    </div>
    <div class="form-group">
      <label for="user_password">Password Confirmation</label>
      <input type="password" name="user[password_confirmation]" id="password_confirmation" class="form-control">
    </div>
    <%= f.submit "Create", class: "btn btn-primary" , style: "margin-top:20px;"%>
  <% end %>

</div>
